pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/sada20/source-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn clean package'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker image build -t tomcat:hello .'
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker image tag tomcat:hello sada20/tomcat:$BUILD_NUMBER'
        sh 'docker image tag tomcat:hello sada20/tomcat:latest'
         }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
          sh 'docker image push sada20/tomcat:v1'
          sh 'docker image push sada20/tomcat:latest'
        }
      }
    }
